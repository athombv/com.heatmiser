{
    "id": "com.heatmiser",
    "version": "1.0.0",
    "category": "climate",
    "compatibility": ">=0.1.0",
    "name": {
        "en": "Heatmiser Thermostat",
        "nl": "Heatmiser Thermostaat"
    },
    "description": {
        "en": "This app lets you control your Heatmiser thermostat using Homey!",
        "nl": "Laat Homey je Heatmiser thermostaat besturen door middel van deze app!"
    },
    "author": {
        "name": "Robin Bolscher",
        "email": "robin@athom.nl"
    },
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "permissions": [
    ],
    "speech": [

    ],
    "drivers": [
        {
            "id": "NeoSmart",
            "name": {
                "en": "Heatmiser Neo Smart",
                "nl": "Heatmiser Neo Smart"
            },
            "images": {
                "large": "drivers/NeoSmart/assets/images/large.jpg",
                "small": "drivers/NeoSmart/assets/images/small.jpg"
            },
            "class": "thermostat",
            "capabilities": [
                "target_temperature",
                "measure_temperature",
                "hold_temperature"
            ],
            "pair": [
                {
                    "id": "list_thermostats",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_thermostats"
                    }
                },
                {
                    "id": "add_thermostats",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "actions": [
            {
                "id": "hold_temperature",
                "title": {
                    "en": "Hold temperature",
                    "nl": "Houd temperatuur vast"
                },
                "args": [
                    {
                        "name": "temperature",
                        "type": "range",
                        "min": 5,
                        "max": 35,
                        "step": 0.5,
                        "unit": "ÂºC",
                        "style": {
                            "width": "40%"
                        }
                    },
                    {
                        "name": "time",
                        "type": "number",
                        "placeholder": {
                            "en": "For time (hours)",
                            "nl": "Voor aantal uur"
                        },
                        "min": 1,
                        "max": 9.5,
                        "step": 0.5,
                        "style": {
                            "width": "60%"
                        }
                    }
                ]
            }
        ]
    }
}